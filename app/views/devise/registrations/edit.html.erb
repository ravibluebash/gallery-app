<div class='container'>
<%= link_to 'Back', admin_albums_path ,style:"float: right " ,class:"btn btn-outline-primary btn-pill px-3  "%>

<br>
<form>
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <strong><%= f.label :email %></strong><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:class=>"form-control"  %>
    
  </div>
  <br> 
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <strong><%= f.label :password,:for=>"exampleInputPassword1" %></strong> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password,  :class=>"form-control"  ,autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <strong><%= f.label :password_confirmation %></strong><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",:class=>"form-control" %>
    <br>
  </div>

  <div class="form-group">
    <strong><%= f.label :current_password ,:for=>"exampleInputPassword1" %></strong> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, :class=>"form-control"  ,autocomplete: "current-password" %>
  </div>

  <div class="form-group">
  <br>
    <%= f.submit "Update",class:"btn btn-outline-success btn-pill px-4" %>
    <br>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class:"btn btn-outline-danger btn-pill px-4  ",method: :delete %></p>



</form>
</div>